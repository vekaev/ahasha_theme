        {{> header}}

        <main style="min-height: calc(100vh - 330px);">
            <div class="content"  >

                {{{body}}}
            </div>
        </main>

        {{{block "footer-area"}}}

        {{> footer}}

    </div>


{{!-- <footer> --}}

    <script src="{{asset "built/jquery-3.4.1.min.js"}}"></script>



    {{#if pagination.pages}}
    <script>
        var maxPages = parseInt('{{pagination.pages}}');
    </script>
    <script src="{{asset "built/infinitescroll.js"}}"></script>
    {{/if}}

    <script>
        $(document).ready(function () {
            // Mobile Menu Trigger
            $('.burger-wrapper').click(function () {
                $('.aside').toggleClass('active');
                $('.burger').toggleClass('active');

            });
            const href = window.location.href;

            if (href.includes('/ru/')) {
                $('.ru-lang').addClass('active');
                $('.en-lang').removeClass('active');
                $('.multilang').addClass('ru');
                $('.multilang').removeClass('en');

            } else {
                $('.ru-lang').removeClass('active');
                $('.en-lang').addClass('active');

                $('.multilang').addClass('en');
                $('.multilang').removeClass('ru');
            }
        });

        let vh = window.innerHeight * 0.01;
        document.documentElement.style.setProperty('--vh', `${vh}px`);

        window.addEventListener('resize', () => {
            let vh = window.innerHeight * 0.01;
            document.documentElement.style.setProperty('--vh', `${vh}px`);
        });
    </script>

