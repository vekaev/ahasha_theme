{{!< default}}

{{#post}}

<article class="post-conent {{post_class}}">

        <div class="intro-part">
             {{!-- TODO: add primary tag check --}}
            <p class="tag">{{primary_tag.name}}</p>
        
            {{!-- {{logger title}} --}}
            <h1>{{title}}</h1>
            <div class="additional">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                {{#if reading_time}}
                    <span class="bull">&bull;</span>
                    <p> {{reading_time}}</span>
                {{/if}}
            </div>
        </div>
        <section>
            {{#if custom_excerpt}}
                <p class="excerpt">{{custom_excerpt}}</p>
                {{/if}}
                {{#if feature_image}}
                <div class="post-image">
                    <img
                        loading="lazy"
                        src="{{img_url feature_image}}"
                        alt="{{title}}"
                    />
                </div>
            {{/if}}
            {{content}}
            <div class="share-part">
                <p>SHARE</p>
               <a class='facebook' href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2F{{@site.url}}{{url}}" target="_blank"></a>
               <a class='twitter' href="https://twitter.com/intent/tweet?url={{@site.url}}{{url}}" target="_blank"></a>
               <a class='linkedin ' href="https://www.linkedin.com/sharing/share-offsite/?url={{@site.url}}{{url}}" target="_blank"></a>
            </div>
           </div>
        </section>
